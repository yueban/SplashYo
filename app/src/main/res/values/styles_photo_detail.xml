<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text.Title.SingleLine.PhotoDetail_Stat">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Layout_Item_PhotoDetail_Stat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="layout_constraintHorizontal_chainStyle">spread</item>
    </style>

    <style name="Layout_Item_PhotoDetail_Camera_Info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="Text.Label.SingleLine.Camera_Info_Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.SubTitle.Camera_Info_Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="Layout_PhotoDetail_Action">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>